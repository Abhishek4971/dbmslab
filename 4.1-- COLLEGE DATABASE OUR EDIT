CREATE TABLE STUDENT(USN VARCHAR(10),SNAME VARCHAR(10),ADDRESS VARCHAR(25),PHONE NUMBER(10),GENDER CHAR(1),PRIMARY KEY(USN));
DESC STUDENT;
CREATE TABLE SEMSEC(SSID VARCHAR(5),SEM NUMBER(2),SEC CHAR(1),PRIMARY KEY(SSID));
DESC SEMSEC;
CREATE TABLE CLASS(USN VARCHAR(10),SSID VARCHAR(5),PRIMARY KEY(USN),FOREIGN KEY (USN) REFERENCES STUDENT(USN),FOREIGN KEY (SSID) REFERENCES SEMSEC(SSID));
DESC CLASS;
CREATE TABLE SUBJECT(SUBCODE VARCHAR(7),TITLE VARCHAR(10),SEM NUMBER(2),CREDITS NUMBER(2),PRIMARY KEY(SUBCODE));
DESC SUBJECT;
CREATE TABLE IAMARKS(USN VARCHAR(10),SUBCODE VARCHAR(7),SSID VARCHAR(5),TEST1 NUMBER(2),TEST2 NUMBER(2),TEST3 NUMBER(2),FINALIA NUMBER(2),PRIMARY KEY(USN,SUBCODE,SSID),FOREIGN KEY (USN) REFERENCES STUDENT(USN),FOREIGN KEY (SSID) REFERENCES SEMSEC(SSID),FOREIGN KEY (SUBCODE) REFERENCES SUBJECT(SUBCODE));
DESC IAMARKS;
DELETE TABLE IAMARKS2;

