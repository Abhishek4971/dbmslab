SELECT MOV_TITLE
FROM MOVIES
WHERE DIR_ID IN(SELECT DIR_ID
                FROM DIRECTOR
                WHERE DIR_NAME='HITCHLOCK');

SELECT MOV_TITLE
FROM MOVIES M,MOVIE_CAST MV
WHERE M.MOV_ID=MV.MOV_ID AND ACT_ID IN(SELECT ACT_ID FROM MOVIE_CAST
                                       GROUP BY ACT_ID HAVING COUNT (ACT_ID) >1);
                                       

SELECT ACT_NAME,MOV_TITLE,MOV_YEAR
FROM ACTOR A
JOIN MOVIE_CAST C ON A.ACT_ID=C.ACT_ID JOIN MOVIES M ON C.MOV_ID=M.MOV_ID
WHERE M.MOV_YEAR NOT BETWEEN 2000 AND 2015;

SELECT MOV_TITLE,MAX(REV_STARS)FROM MOVIES
INNER JOIN RATING USING(MOV_ID)GROUP BY
MOV_TITLE HAVING MAX(REV_STARS) >0 ORDER BY MOV_TITLE

UPDATE RATING SET
REV_STARS=5
WHERE MOV_ID IN (SELECT MOV_ID FROM MOVIES
WHERE DIR_ID IN(SELECT DIR_ID FROM DIRECTOR WHERE DIR_NAME='STEVEN SPILBEG'));
SELECT * FROM RATING;
